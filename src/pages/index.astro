---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Ibuuvai | Portfolio">
	<main>
		<section class="hero">
			<h1>Hello, I'm <span class="text-gradient">Ibuuvai</span></h1>
			<p class="intro">
				Welcome to my digital garden where code meets creativity
			</p>
		</section>

		<section class="journey">
			<h2>My Journey</h2>
			<div class="timeline">
				<!-- You can add timeline items here -->
			</div>
		</section>

		<section class="projects">
			<h2>Featured Work</h2>
			<ul role="list" class="project-grid">
				<Card
					href="#"
					title="Project One"
					body="Description of your first major project"
				/>
				<Card
					href="#"
					title="Project Two"
					body="Description of your second major project"
				/>
				<!-- Add more projects as needed -->
			</ul>
		</section>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.hero {
		height: 90vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		text-align: center;
	}
	h1 {
		font-size: 5rem;
		font-weight: 700;
		line-height: 1;
		margin-bottom: 1rem;
	}
	.intro {
		font-size: 1.5rem;
		opacity: 0.9;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.project-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(30ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
	section {
		margin: 4rem 0;
	}
	h2 {
		font-size: 2.5rem;
		margin-bottom: 2rem;
	}
</style>
