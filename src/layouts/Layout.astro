---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Vai - Digital Philosopher, Code Poet, and Virtual Wanderer">
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: rgb(138, 43, 226);
	}
	
	html {
		font-family: system-ui, sans-serif;
		background: linear-gradient(45deg, #1a1a1a, #2d1f3d);
		min-height: 100vh;
	}
	
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		color: white;
	}

	* {
		box-sizing: border-box;
	}
</style>
