<div class="avatar-container">
    <img src="/images/vai.avif" alt="vai avatar" class="avatar" />
</div>

<style>
    .avatar-container {
        position: relative;
        width: 200px;
        height: 200px;
        margin: 2rem auto;
    }

    .avatar {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        animation: float 6s ease-in-out infinite;
        box-shadow: 0 0 30px rgba(138, 43, 226, 0.4);
    }

    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }
</style> 