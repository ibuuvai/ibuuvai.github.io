        grid-column: 1 / -1;
        padding: 1rem;
        margin-bottom: 0;
    }

    .glass-panel {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .about-section {
        padding: 1.5rem;
        height: 100%;
        display: flex;
