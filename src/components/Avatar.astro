    }

    .about-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: auto;
    }

    .about-item {
        background: rgba(0, 0, 0, 0.2);
        padding: 1rem;
        border-radius: 15px;
    }

    .about-item h3 {
        margin: 0;
        color: white;
        font-size: 0.9rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .about-item p {
        margin: 0;
        color: rgba(255, 255, 255, 0.7);
        line-height: 1.4;
    }

    .name-title {
        font-size: 3rem;
        color: white;
        margin: 0;
    }

    .avatar-container {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 0 2rem;
    }

    .avatar {
        max-width: 1200px;
        width: 100%;
        height: auto;
        animation: float 6s ease-in-out infinite;
        filter: drop-shadow(0 0 30px rgba(138, 43, 226, 0.4));
    }

    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }

    @media (max-width: 768px) {
        .dashboard-container {
            grid-template-columns: 1fr;
            padding: 1rem;
            gap: 1rem;
        }

        .main-section {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .name-section {
            margin-top: 2rem;
            text-align: center;
        }

        .avatar {
            max-width: 400px;
        }

        .about-container {
            gap: 0.75rem;
        }
    }

    @media (max-width: 480px) {
        .about-container {
            grid-template-columns: 1fr;
        }
    }
</style> 