    .main-section {
        display: grid;
        grid-template-columns: 250px 1fr;
        grid-template-rows: auto 1fr min-content;
        height: 100%;
    }

    .name-section {
        margin-top: 1rem;
        align-self: start;
        padding: 1.5rem;
    }

